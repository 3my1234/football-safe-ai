# API Configuration
API_FOOTBALL_KEY=your_api_football_key_here

# Database Configuration
# Option 1: Separate database on same PostgreSQL server (RECOMMENDED)
FOOTBALL_AI_DATABASE_URL=postgresql://postgres:PHYSICS1234@localhost:5432/football_ai?schema=public

# Option 2: Use existing Rolley database (same server, same database)
# FOOTBALL_AI_DATABASE_URL=postgresql://postgres:PHYSICS1234@localhost:5432/rolley?schema=public

# Option 3: Different schema in Rolley database
# FOOTBALL_AI_DATABASE_URL=postgresql://postgres:PHYSICS1234@localhost:5432/rolley?schema=football_ai

# Fallback (if FOOTBALL_AI_DATABASE_URL not set)
# DATABASE_URL=postgresql://postgres:PHYSICS1234@localhost:5432/football_ai?schema=public

# Odds Range
MIN_ODDS=1.03
MAX_ODDS=1.10

# Model Configuration
MODEL_PATH=./models/football_model.pkl

# Environment
NODE_ENV=production

# Admin Configuration (for n8n)
ADMIN_EMAIL=admin@example.com
ADMIN_URL=http://localhost:8000/admin

# Telegram (for n8n notifications)
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

